<form action="/post/search" method="GET">
  <div class="row px-4">
    <div class="form-group col-10">
      <div class="input-group">
        <select class="form-select form-control w-25" id="constraint" name="constraint" value="<%= constraint || '' %>">
          <option value="title" <%= constraint === 'title' ? 'selected' : ''%>>title</option>
          <option value="tags" <%= constraint === 'tags' ? 'selected' : ''%>>tags</option>
          <option value="description" <%= constraint === 'description' ? 'selected' : ''%>>description</option>
        </select>
        <input type="search" class="form-control w-75" id="search_query" name="search_query" value="<%= search_query || '' %>" placeholder="search post...">
      </div>
    </div>
      <button type="submit" class="form-control btn btn-primary col-2">search</button>
  </div>
</form>
